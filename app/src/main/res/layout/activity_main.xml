<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:gravity="center_horizontal"
    tools:context="com.freddieptf.meh.imagecompressor.MainActivity">

    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:gravity="center">

        <Button
            android:id="@+id/btnChooser"
            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose Image(s)"
            android:layout_marginRight="2dp"
            android:layout_marginEnd="2dp"/>

        <View android:layout_width="1dp"
            android:layout_height="16dp"
            android:background="@color/colorPrimaryDark"/>

        <Button
            android:id="@+id/btnVidActivity"
            android:layout_width="wrap_content"
            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
            android:layout_height="wrap_content"
            android:text="Choose Video"
            android:layout_marginLeft="2dp"
            android:layout_marginStart="2dp"
            />

    </TableRow>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/previewRecycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_filePath"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_fileSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btnCompress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="compress"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="serif-monospace"
        android:layout_gravity="bottom|center"
        android:text="ImageCompressor v1.0"/>

</LinearLayout>
